  {
    "name": "Granular Voice Assistant",
    "version": "0.2",
    "description": "Granular voice assistant. Ask me any questions",
    "manifest_version": 2,
    "permissions": ["declarativeContent",
      "http://localhost/*"
    ],
    "background": {
      "scripts": ["js/background.js"],
      "persistent": false
    },
    "page_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon_granular16.png",
        "32": "images/icon_granular32.png",
        "48": "images/icon_granular48.png",
        "128": "images/icon_granular128.png"
      }
    },
    "icons": {
      "16": "images/icon_granular16.png",
      "32": "images/icon_granular32.png",
      "48": "images/icon_granular48.png",
      "128": "images/icon_granular128.png"
    }
  }
